<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TextAppearance.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/text_title</item>
    </style>
    <style name="TextAppearance.SubTitle" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">@dimen/subtitle_text</item>
        <item name="android:textColor">@color/textColor</item>
    </style>
    <style name="TextAppearance.Contact" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textStyle">bold</item>

    </style>
    <style name="TextAppearance.Tips" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/tipsSize</item>
    </style>

</resources>